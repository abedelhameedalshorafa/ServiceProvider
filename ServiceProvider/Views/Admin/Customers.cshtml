@{
    Layout = "Admin";
}

@model List<Customer>

<header>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        td, th {
            flex: 1 1 20%;
            text-align: center;
            margin: 5px;
        }
    </style>
</header>
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Customers</h6>
        <form class="d-none d-md-flex ms-2" asp-action="CustomerSearch" method="post">
            <input class="form-control border-0" style="width:20%;" type="search" placeholder="Search" name="searchItem">
            <button style="margin-left:4px;" class="btn btn-outline-primary" type="submit">Search</button>
        </form>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        @* <th scope="col">#</th> *@
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">City</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Total Orders</th>
                        <th scope="col">For Deleting</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        var count = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <th scope="row">@count</th> *@
                            <td><img class="rounded-circle" src="@((item.ImageUrl != null) ? Url.Content(item.ImageUrl) : "")" alt="" style="width: 35px; height: 35px;"></td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.City</td>
                            <td>@item.Phone</td>
                            <td>@item.Orders.Count()</td>
                            <td><a class="btn btn-danger" data-id="@item.ID">Delete</a></td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Table End -->


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $('.btn-danger').on('click', function () {
        var id = $(this).data('id');

        Swal.fire({
            title: 'Are you sure?',
            text: 'You won\'t be able to revert this!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                // User clicked Yes, handle the deletion here
                window.location.href = '@Url.Action("DeleteCustomer", "Admin")' + '?id=' + id;
            }
        });
    });
</script>

