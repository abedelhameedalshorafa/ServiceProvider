@model Subscription

<!-- Quote Start -->
<div class="container-fluid bg-light overflow-hidden px-lg-0" style="margin: 6rem 0;">
    <div class="container quote px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div style="width:80%;" class="col-lg-6 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 pe-lg-0">
                    <div class="section-title text-start">
                        <h1 class="display-5 mb-4">Free Quote</h1>
                    </div>
                    <p class="mb-4 pb-2">Tempor erat elitr rebum at clita. Diam dolor diam ipsum sit. Aliqu diam amet diam et eos. Clita erat ipsum et lorem et sit, sed stet lorem sit clita duo justo erat amet</p>
                    <form asp-action="PaySubscription" method="post">
                        <input asp-for="@Model.ID" hidden/>
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                <input type="text" class="form-control border-0" asp-for="Name" placeholder="Your Name" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="number" class="form-control border-0" asp-for="numberOfMonths" placeholder="Number Of Subscription Months" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="number" class="form-control border-0" disabled placeholder="Number Of Subscription Months" style="height: 55px;">
                            </div>@* this for amount  *@
                            <div class="col-12 col-sm-6">
                                <input type="number" class="form-control border-0" asp-for="cardNumber" placeholder="Your Card Number" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="password" class="form-control border-0" asp-for="cardPassword" placeholder="Your Card Password" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Quote End -->