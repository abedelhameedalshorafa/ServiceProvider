@model Subscription

<head>
    <style>
        .error-message {
            color: #ff0000; /* Red color for error messages */
            font-size: 14px;
            margin-top: 5px;
        }

        .s {
            background: linear-gradient(rgba(53, 53, 53, .7), rgba(53, 53, 53, .7)), url('../Images/Subscription.jpg') center center no-repeat;
            background-size: cover;
            height: 40vh;
        }
    </style>
</head>
<!-- Quote Start -->
<div class="container-fluid bg-light overflow-hidden px-lg-0">
    <div class="container-fluid s py-5 mb-2">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Pay Subscriptions </h1>
        </div>
    </div>
    <div class="container quote px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div style="width:100%;" class="col-lg-6 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 pe-lg-0">
                    <form asp-action="PaySubscription" method="post">
                        <input asp-for="@Model.ID" hidden />
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                <input type="text" class="form-control border-0" asp-for="Name" placeholder="Your Name" style="height: 55px;" required>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="number" class="form-control border-0" asp-for="numberOfMonths" placeholder="Number Of Subscription Months" style="height: 55px;" required>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="number" class="form-control border-0" asp-for="cardNumber" placeholder="Your Card Number" style="height: 55px;" required>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="password" class="form-control border-0" asp-for="cardPassword" placeholder="Your Card Password" style="height: 55px;" required>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Quote End -->